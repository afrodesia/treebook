<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :first_name, class: "form-label" %>
  <%= f.text_field :first_name, :autofocus => true, class: "form-field" %>
  
  <%= f.label :last_name, class: "form-label" %>
  <%= f.text_field :last_name, :autofocus => true, class: "form-field" %>

  <%= f.label :profile_name, class: "form-label" %>
  <%= f.text_field :profile_name, :autofocus => true, class: "form-field" %>

  <%= f.label :email, class: "form-label" %>
  <%= f.email_field :email, :autofocus => true, class: "form-field" %>

  <%= f.label :password, class: "form-label" %>
  <%= f.password_field :password, class: "form-field" %>

  <%= f.label :password_confirmation, class: "form-label" %>
  <%= f.password_field :password_confirmation, class: "form-field" %>

  <div class="actions">
    <%= f.submit "Sign up", class:"submit-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
