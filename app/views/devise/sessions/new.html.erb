<h2>Sign in</h2>
<section class="form-wrapper">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <%= f.label :email, class: "form-label" %>
  <%= f.email_field :email, :autofocus => true, class: "form-field" %>

  <%= f.label :password, class: "form-label" %>
  <%= f.password_field :password, class: "form-field" %>

  <% if devise_mapping.rememberable? -%>
    <div class="rememberme"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="actions">
  	<%= f.submit "Sign in", class:"submit-btn" %></div>
<% end %>
</section>
<aside class="global-links">
	
<%= render "devise/shared/links" %>
</aside>