<h2>All Statuses</h2>

<%= link_to "Post a New Status", new_status_path, class: "btn-status" %>
<section class="new-post-wrapper clearfix">
<% @statuses.each do |status| %>
 </section>
 <section class="status clearfix">
  <span class="avatar">

   <%= image_tag status.user.gravatar_url %>
   
   </span> 

  <strong>
    <%= status.user.full_name %>

  </strong>
  <p> <%= status.content %> </p>
   <div class="meta">
     <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
     <span class="admin">
       <span class="edit-admin"><%= link_to "Edit", edit_status_path(status)  %></span>
        <span class="delete-admin"><%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure your want to delete this status?"} %></span>
     </span>
   </div>
 </section>
<% end %>
 </section>